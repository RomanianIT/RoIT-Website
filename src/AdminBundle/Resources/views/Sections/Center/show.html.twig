{% extends 'base.html.twig' %}

{% block body %}
    <h1>Center</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ center.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ center.name }}</td>
            </tr>
            <tr>
                <th>Zona</th>
                <td>{{ center.zone }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ center.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('website_admin_centers_main') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('website_admin_centers_edit', { 'id': center.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
